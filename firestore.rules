
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Profiles are public so people can verify trust, but only owner can write
    match /users/{userId} {
      allow read: if request.auth != null; 
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Listings: Public read, host can update their own
    match /listings/{listingId} {
      allow read: if true; 
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.hostId == request.auth.uid;
    }
    
    // Bookings: Shared access between guest and host
    match /bookings/{bookingId} {
      allow read, update: if request.auth != null && 
        (resource.data.guestId == request.auth.uid || 
         resource.data.hostId == request.auth.uid);
      allow create: if request.auth != null;
    }
    
    // Reviews: Publicly readable for trust building
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // Chats: Only participants can access their threads and sub-messages
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
    
    // Audit logs: Strictly admin
    match /audit_logs/{logId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "ADMIN";
    }
  }
}
